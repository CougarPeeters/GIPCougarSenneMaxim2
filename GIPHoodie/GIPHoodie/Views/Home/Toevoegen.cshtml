@model GIPHoodie.Models.VMArtikelAantal
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <title>Toevoegen</title>
</head>
<body class="m-3">
    <form asp-action="Toevoegen" asp-controller="Home">
        <h2>Online Hoodieshop - Item toevoegen aan winkelmandje</h2>
        <table class="table">
            <tr>
                <td rowspan="4"><img class="groteFoto" src="@Url.Content("~/images/" + Model.GeselecteerdArtikel.Foto)" /></td>
                
                <td>ArtNr:</td>
                <td>@Model.GeselecteerdArtikel.ArtikelID</td>
            </tr>
            <tr>
                
                <td></td>
                <td>Naam:</td>
                <td>@Model.GeselecteerdArtikel.Naam</td>
            </tr>
            <tr>
                
                <td></td>
                <td>Verkoopprijs:</td>
                <td>€ @Model.GeselecteerdArtikel.Prijs</td>
            </tr>
            <tr>
                
                <td></td>
                <td>Voorraad:</td>
                <td>@Model.GeselecteerdArtikel.Voorraad</td>
            </tr>

        </table>
        <p>Aantal toe te voegen aan het mandje:<input type="text"  asp-for="Aantal"/><input type="submit" asp-route-ArtNr="@Model.GeselecteerdArtikel.ArtikelID" value="Voeg toe aan het mandje..." /></p>
        <p><a asp-action="Index" asp-controller="Home">Terug naar de catalogus</a></p>
    </form>
</body>
</html>
